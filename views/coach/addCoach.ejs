      <label class="form-label" for="firstname">First Name</label>
      <input class="form-control" type="text" id="fisrtname" name="coach[firstname]" required />
    </div>
    <div class="mb-3">
      <label class="form-label" for="lastname">Last Name</label>
      <input class="form-control" type="text" id="lastname" name="coach[lastname]" required />
    </div>
    <div class="mb-3">
      <label class="form-label" for="teamscoached">Teams Coached</label>
      <input class="form-control" type="text" id="teamscoached" name="coach[teamscoached]" required />
    </div>
    <div class="mb-3">
      <label class="form-label" for="yearscoached"> Years Coached</label>
      <input class="form-control" type="number" id="yearscoached" name="coach[yearscoached]" required />
    </div>
    <div class="mb-3">
      <label class="form-label" for="wins"> Wins</label>
      <input class="form-control" type="number" id="wins" name="coach[wins]" required />
