      <label class="form-label" for="winpercentage"> Win Percentage</label>
      <input class="form-control" type="number" id="winpercentage" name="coach[winpercentage]" required />
    </div>
    <div class="mb-3">
      <label class="form-label" for="championships"> Championships</label>
      <input class="form-control" type="number" id="championships" name="coach[championships]" required />
