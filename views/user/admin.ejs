        <thead>
            <tr>
                <th scope="col">User_id</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>
            <% for (let row of rows) {%>
                <tr>
                    <td>
                        <%= row.id %>
                    </td>
